{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "useDefineForClassFields": false
  },
  "include": ["src/**/*.ts"]
}
